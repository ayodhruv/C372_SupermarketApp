<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <%- include('./partials/cardStyles') %>
  <title>Supermarket App</title>
</head>
<body>

    <%- include('./partials/background') %>
    <%- include('./partials/navbar') %>

  <div class="container">
    <div class="d-flex justify-content-between align-items-center mt-3 mb-3">
      <p class="mb-0">Welcome, <%= user.username %> (<%= user.role %>)</p>
      <a href="/cart" class="btn btn-outline-primary btn-sm">Go to Cart</a>
    </div>

    <div class="text-center mb-4"><h2>Products from Supermarket</h2></div>

    <form method="GET" action="/shopping" class="card shadow-sm mb-4">
      <div class="card-body row g-3 align-items-end">
        <div class="col-md-6">
          <label class="form-label">Search</label>
          <input type="text" name="q" class="form-control" placeholder="Search products..." value="<%= filters && filters.term ? filters.term : '' %>">
        </div>
        <div class="col-md-3">
          <label class="form-label">Min Price</label>
          <input type="number" step="0.01" name="minPrice" class="form-control" value="<%= filters && !isNaN(filters.minPrice) ? filters.minPrice : '' %>">
        </div>
        <div class="col-md-3">
          <label class="form-label">Max Price</label>
          <input type="number" step="0.01" name="maxPrice" class="form-control" value="<%= filters && !isNaN(filters.maxPrice) ? filters.maxPrice : '' %>">
        </div>
        <div class="col-12 d-flex gap-2">
          <button type="submit" class="btn btn-primary">Apply Filters</button>
          <a href="/shopping" class="btn btn-outline-secondary">Clear</a>
        </div>
      </div>
    </form>

    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% for (let i = 0; i < products.length; i++) { %>
        <div class="col">
          <div class="card h-100 shadow-sm card-hover-green">
            <img src="/images/<%= products[i].image %>" class="card-img-top" alt="<%= products[i].productName %>" style="object-fit: contain; height: 140px; padding: 0.75rem;">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><a href="/product/<%= products[i].id %>"><%= products[i].productName %></a></h5>
              <p class="card-text mb-1">Price: $<%= products[i].price.toFixed(2) %></p>
              <p class="card-text text-muted mb-3">In stock: <%= products[i].quantity %></p>

              <div class="mt-auto">
                <div class="mb-2">
                  <label class="form-label small mb-1">Quantity</label>
                  <select class="form-select" onchange="document.getElementById('quantity-<%= products[i].id %>').value = this.value">
                    <% for (let q = 1; q <= 5; q++) { %>
                      <option value="<%= q %>"><%= q %></option>
                    <% } %>
                  </select>
                </div>
                <form action="/add-to-cart/<%= products[i].id %>" method="POST">
                  <input type="hidden" name="quantity" id="quantity-<%= products[i].id %>" value="1">
                  <button type="submit" class="btn btn-primary w-100">Add to Cart</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
