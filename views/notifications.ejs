<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Notifications</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <%- include('./partials/background') %>
  <%- include('./partials/navbar') %>

  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="mb-0">Notifications</h2>
      <form action="/notifications/mark-read" method="POST">
        <button type="submit" class="btn btn-outline-secondary btn-sm">Mark all as read</button>
      </form>
    </div>

    <% if (!notifications || notifications.length === 0) { %>
      <div class="alert alert-info">No notifications yet.</div>
    <% } else { %>
      <div class="list-group">
        <% notifications.forEach((n) => { %>
          <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-start <%= n.read ? '' : 'active' %>" href="<%= n.link || '#' %>">
            <div>
              <div class="fw-semibold"><%= n.title || n.type || 'Notification' %></div>
              <div class="small"><%= n.message || '' %></div>
              <div class="text-muted small">Created: <%= n.createdAt %></div>
            </div>
            <span class="badge bg-light text-dark border"><%= n.read ? 'Read' : 'New' %></span>
          </a>
        <% }); %>
      </div>
    <% } %>
  </div>
</body>
</html>
