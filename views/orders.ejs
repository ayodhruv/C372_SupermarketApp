<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order History</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <%- include('./partials/cardStyles') %>
</head>
<body>
  <%- include('./partials/background') %>
  <%- include('./partials/navbar') %>

  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="mb-0">Order History</h2>
      <a href="/" class="btn btn-outline-secondary btn-sm">Home</a>
    </div>

    <% if (!orders || orders.length === 0) { %>
      <div class="alert alert-info">No orders yet.</div>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-2 g-3">
        <% orders.forEach((order) => { %>
          <div class="col">
            <div class="card card-hover-green h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between mb-2">
                  <h5 class="card-title mb-0"><%= order.orderId %></h5>
                  <span class="badge text-bg-success">Completed</span>
                </div>
                <p class="mb-1 text-muted">Placed: <%= order.timestamp %></p>
                <p class="fw-semibold mb-3">Total: $<%= order.total.toFixed(2) %></p>

                <div class="accordion" id="order-<%= order.orderId %>">
                  <div class="accordion-item">
                    <h2 class="accordion-header" id="heading-<%= order.orderId %>">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= order.orderId %>" aria-expanded="false" aria-controls="collapse-<%= order.orderId %>">
                        View items
                      </button>
                    </h2>
                    <div id="collapse-<%= order.orderId %>" class="accordion-collapse collapse" aria-labelledby="heading-<%= order.orderId %>" data-bs-parent="#order-<%= order.orderId %>">
                      <div class="accordion-body">
                        <ul class="list-group">
                          <% order.items.forEach((item) => { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                              <div>
                                <div class="fw-semibold"><%= item.productName %></div>
                                <small class="text-muted">Qty: <%= item.quantity %> @ $<%= item.price.toFixed(2) %></small>
                              </div>
                              <span>$<%= (item.price * item.quantity).toFixed(2) %></span>
                            </li>
                          <% }) %>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="mt-auto pt-3 d-flex gap-2">
                  <a class="btn btn-outline-primary btn-sm" href="/notifications">Notifications</a>
                  <a class="btn btn-outline-secondary btn-sm" href="/checkout">View invoice</a>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
</body>
</html>
