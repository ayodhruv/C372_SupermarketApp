<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    .user-card {
      transition: transform 150ms ease, box-shadow 150ms ease, background-color 150ms ease;
      background: rgba(255, 255, 255, 0.88);
      border: none;
    }
    .user-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 10px 24px rgba(0, 0, 0, 0.12);
      background: rgba(255, 255, 255, 0.95);
    }
  </style>
</head>
<body>
  <%- include('./partials/background') %>
  <%- include('./partials/navbar') %>

  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="mb-0">User Management</h2>
      <a href="/inventory" class="btn btn-outline-secondary btn-sm">Back to Inventory</a>
    </div>

    <% if (!users || users.length === 0) { %>
      <div class="alert alert-info">No users found.</div>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
        <% users.forEach((u) => { %>
          <div class="col">
            <div class="card user-card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <h5 class="card-title mb-0">#<%= u.id %> • <%= u.username %></h5>
                  <span class="badge text-bg-secondary text-uppercase"><%= u.role %></span>
                </div>
                <p class="mb-1"><strong>Email:</strong> <%= u.email %></p>
                <p class="mb-1"><strong>Address:</strong> <%= u.address || '—' %></p>
                <p class="mb-3"><strong>Contact:</strong> <%= u.contact || '—' %></p>
                <div class="mt-auto d-flex justify-content-end">
                  <a href="/users/<%= u.id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
</body>
</html>
