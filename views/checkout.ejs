<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Checkout</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    .glass-card {
      background: rgba(255, 255, 255, 0.82);
      backdrop-filter: blur(10px);
      border-radius: 14px;
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
    }
  </style>
</head>
<body>
  <%- include('./partials/background') %>
  <%- include('./partials/navbar') %>

  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <% const hasItems = cart && cart.length > 0; %>

        <% if (completed) { %>
          <div class="alert alert-success shadow-sm" role="alert">
            <strong>Checkout successful!</strong> Your order is confirmed and your cart has been cleared.
          </div>
        <% } %>

        <div class="card glass-card">
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div>
                <h3 class="mb-1">Checkout</h3>
                <p class="text-muted mb-0">Review your cart before placing the order.</p>
              </div>
              <span class="badge text-bg-primary">Step 2 of 2</span>
            </div>

            <% if (!hasItems) { %>
              <p class="mb-4">Your cart is empty right now.</p>
              <div class="d-flex gap-2 flex-wrap">
                <a href="/shopping" class="btn btn-primary">Start Shopping</a>
                <a href="/cart" class="btn btn-outline-secondary">Back to Cart</a>
              </div>
            <% } else { %>
              <ul class="list-group mb-4">
                <% cart.forEach((item) => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-3">
                      <img src="/images/<%= item.image %>" alt="<%= item.productName %>" width="64" height="64" class="rounded" style="object-fit: cover;">
                      <div>
                        <h6 class="mb-1"><%= item.productName %></h6>
                        <small class="text-muted">Qty: <%= item.quantity %> • $<%= item.price.toFixed(2) %> each</small>
                      </div>
                    </div>
                    <span class="fw-semibold">$<%= (item.price * item.quantity).toFixed(2) %></span>
                  </li>
                <% }) %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <span class="fw-semibold">Order Total</span>
                  <span class="fw-semibold">$<%= total.toFixed(2) %></span>
                </li>
              </ul>

              <div class="alert alert-info small">
      
              </div>

              <form action="/checkout" method="POST" class="d-flex flex-wrap gap-2 justify-content-between">
                <a href="/cart" class="btn btn-outline-secondary">Back to Cart</a>
                <button type="submit" class="btn btn-success px-4">Place Order</button>
              </form>
            <% } %>
          </div>
        </div>

        <% if (completed) { %>
          <div id="invoice" class="card glass-card mt-4">
            <div class="card-body p-4">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                  <h4 class="mb-1">Invoice</h4>
                  <p class="text-muted mb-0">Order confirmation and breakdown</p>
                </div>
                <span class="badge text-bg-success">Paid</span>
              </div>

              <div class="row mb-3">
                <div class="col-md-6">
                  <small class="text-muted d-block">Invoice ID</small>
                  <strong><%= orderId %></strong>
                </div>
                <div class="col-md-6 text-md-end">
                  <small class="text-muted d-block">Date & Time</small>
                  <strong><%= orderTimestamp %></strong>
                </div>
              </div>

              <ul class="list-group mb-3">
                <% cart.forEach((item) => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                      <div class="fw-semibold"><%= item.productName %></div>
                      <small class="text-muted">Qty: <%= item.quantity %> @ $<%= item.price.toFixed(2) %></small>
                    </div>
                    <span>$<%= (item.price * item.quantity).toFixed(2) %></span>
                  </li>
                <% }) %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <span class="fw-semibold">Total Paid</span>
                  <span class="fw-semibold">$<%= total.toFixed(2) %></span>
                </li>
              </ul>

              <div class="d-flex flex-wrap gap-2">
                <button class="btn btn-outline-primary" onclick="printInvoice()">Print Invoice</button>
                <button class="btn btn-outline-success" onclick="downloadInvoice()">Download PDF</button>
                <button class="btn btn-outline-dark" onclick="toggleHistory()">View Order History</button>
              </div>

              <div id="order-history" class="mt-3" style="display:none;">
                <h6 class="mb-3">Order History</h6>
                <div class="accordion" id="historyAccordion">
                  <div class="accordion-item">
                    <h2 class="accordion-header" id="heading-<%= orderId %>">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= orderId %>" aria-expanded="false" aria-controls="collapse-<%= orderId %>">
                        <div class="d-flex flex-column w-100">
                          <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-semibold"><%= orderId %></span>
                            <span class="text-muted small"><%= orderTimestamp %></span>
                          </div>
                          <small class="text-muted">Completed • Total: $<%= total.toFixed(2) %></small>
                        </div>
                      </button>
                    </h2>
                    <div id="collapse-<%= orderId %>" class="accordion-collapse collapse" aria-labelledby="heading-<%= orderId %>" data-bs-parent="#historyAccordion">
                      <div class="accordion-body">
                        <ul class="list-group mb-3">
                          <% cart.forEach((item) => { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                              <div>
                                <div class="fw-semibold"><%= item.productName %></div>
                                <small class="text-muted">Qty: <%= item.quantity %> @ $<%= item.price.toFixed(2) %></small>
                              </div>
                              <span>$<%= (item.price * item.quantity).toFixed(2) %></span>
                            </li>
                          <% }) %>
                        </ul>
                        <div class="d-flex justify-content-between">
                          <span class="fw-semibold">Total</span>
                          <span class="fw-semibold">$<%= total.toFixed(2) %></span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script>
    function printInvoice() {
      window.print();
    }

    function downloadInvoice() {
      // Leverage print dialog for PDF export; most browsers allow "Save as PDF"
      window.print();
    }

    function toggleHistory() {
      const history = document.getElementById('order-history');
      if (!history) return;
      const isHidden = history.style.display === 'none' || history.style.display === '';
      history.style.display = isHidden ? 'block' : 'none';
      if (isHidden) {
        const firstCollapse = history.querySelector('.accordion-collapse');
        if (firstCollapse) {
          const collapseInstance = bootstrap.Collapse.getOrCreateInstance(firstCollapse, { toggle: false });
          collapseInstance.show();
        }
      }
    }
  </script>
</body>
</html>
